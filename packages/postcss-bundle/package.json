{
  "name": "@bruitt/postcss-bundle",
  "version": "1.3.0",
  "main": "dist/lib/postcssBundle.js",
  "module": "dist/es/postcssBundle.es.js",
  "typings": "dist/types/postcssBundle.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "postinstall": "mkdir -p ./node_modules/@bruitt && ln -sfn $(pwd) ./node_modules/@bruitt/postcss-bundle",
    "prebuild": "rm -rf dist",
    "build": "npm run build:commonjs && npm run build:es",
    "build:es": "tsc --outDir dist/es --module es2015",
    "build:commonjs": "tsc --outDir dist/lib --module commonjs",
    "check-ver": "npm-check --skip-unused",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bruitt/build.git"
  },
  "author": "Pavel Pertsev <morhetz@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "postcss-assets": "^4.1.0",
    "postcss-cssnext": "^2.8.0",
    "precss": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.25",
    "npm-check": "^5.4.0",
    "typescript": "^2.4.2"
  }
}
